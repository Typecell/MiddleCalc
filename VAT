public static void main(String[] args) throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        DecimalFormatSymbols otherSymbols = new DecimalFormatSymbols(Locale.getDefault());
        otherSymbols.setDecimalSeparator('.');
        DecimalFormat decimalFormat = new DecimalFormat("##0.00", otherSymbols);
        String res = null;
        System.out.println("Введите число:");
        double sum = Double.parseDouble(reader.readLine());
        if (sum <= 0.0D) {
            System.out.println("Введите число больше нуля");
        }

        if (sum > 0.0D) {
            double nds = sum / 1.18D * 0.18D;
            String fNDS = decimalFormat.format(nds);
            System.out.println("НДС: " + fNDS);
            res = fNDS;
        }

        StringSelection ss = new StringSelection(res);
        Toolkit.getDefaultToolkit().getSystemClipboard().setContents(ss, (ClipboardOwner)null);
    }
